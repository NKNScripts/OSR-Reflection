function TReflectLib.getFieldStringArray(objref:PtrUInt;hook:THook): TStringArray;
var
  hi, i: Integer;
begin
  SetLength(Result, self.getFieldArraySize(objref, hook, 0));
  hi := High(Result);
  for i := 0 to hi do
  begin
    Result[i] := self.getFieldArrayString(objref, hook, i);
  end;
end;

