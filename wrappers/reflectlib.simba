begin
  SetLength(Result, 512);
  SetLength(Result, SmartStringFromBytes(self.target, objref, Result));
  Result := Trim(Replace(Replace(Result, #194, '', [rfReplaceAll]), #160, #32, [rfReplaceAll]));
end;

